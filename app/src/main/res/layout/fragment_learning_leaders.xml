<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LearningLeadersFragment">

    <ProgressBar
        android:id="@+id/learning_leaders_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimary"
        android:progressBackgroundTint="@color/colorPrimary"
        android:progressDrawable="@drawable/progress"
        android:secondaryProgressTint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/learningLeadersList"
        app:layout_constraintEnd_toEndOf="@+id/learningLeadersList"
        app:layout_constraintStart_toStartOf="@+id/learningLeadersList"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/learningLeadersList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:itemCount="2"
        tools:listitem="@layout/learning_leader_item" />

</androidx.constraintlayout.widget.ConstraintLayout>